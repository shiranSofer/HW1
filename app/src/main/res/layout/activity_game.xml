<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.shira.hw1.GameActivity">


    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/app"
            android:textColor="#000000"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/player_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_bar"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/Player"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/Time"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_view_timer"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/timer"
            android:textColor="#000000"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardrow_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_below="@+id/player_bar"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/row_0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/card_0"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic0"
                android:tag="0" />

            <ImageView
                android:id="@+id/card_1"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic1"
                android:tag="1" />

            <ImageView
                android:id="@+id/card_2"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic2"
                android:tag="2" />

            <ImageView
                android:id="@+id/card_3"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic3"
                android:tag="3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/card_4"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic0"
                android:tag="4" />

            <ImageView
                android:id="@+id/card_5"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic1"
                android:tag="5" />

            <ImageView
                android:id="@+id/card_6"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic2"
                android:tag="6" />

            <ImageView
                android:id="@+id/card_7"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic3"
                android:tag="7" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/card_8"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic0"
                android:tag="8" />

            <ImageView
                android:id="@+id/card_9"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic1"
                android:tag="9" />

            <ImageView
                android:id="@+id/card_10"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic2"
                android:tag="10" />

            <ImageView
                android:id="@+id/card_11"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic3"
                android:tag="11" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/card_12"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic0"
                android:tag="12" />

            <ImageView
                android:id="@+id/card_13"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic1"
                android:tag="13" />

            <ImageView
                android:id="@+id/card_14"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic2"
                android:tag="14" />

            <ImageView
                android:id="@+id/card_15"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic3"
                android:tag="15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/card_16"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic0"
                android:tag="16" />

            <ImageView
                android:id="@+id/card_17"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic1"
                android:tag="17" />

            <ImageView
                android:id="@+id/card_18"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic2"
                android:tag="18" />

            <ImageView
                android:id="@+id/card_19"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_margin="8dip"
                android:src="@drawable/pic3"
                android:tag="19" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/outcome_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/outcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOU WIN!"
            android:textSize="30dip"
            android:textColor="#EEEEEE"/>

    </LinearLayout>

</RelativeLayout>